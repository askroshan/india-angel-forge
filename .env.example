# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/indiaangelforum?schema=public"

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate strong secret: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-this-in-production-use-openssl-rand-base64-32"
JWT_EXPIRES_IN="7d"

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_FILE_SIZE=10485760                    # 10MB in bytes
UPLOAD_DIR="./uploads"                    # General uploads
INVOICE_DIR="./invoices"                  # PDF invoices
ATTACHMENT_DIR="./attachments"            # Message attachments

# ============================================================================
# EMAIL SERVICE - EMAILIT
# ============================================================================
# Sign up at https://emailit.com for API credentials
EMAILIT_API_KEY="your-emailit-api-key-here"
EMAILIT_FROM_EMAIL="noreply@indiaangelforum.com"
EMAILIT_FROM_NAME="India Angel Forum"
EMAILIT_API_URL="https://api.emailit.com/v1"

# ============================================================================
# PAYMENT GATEWAYS - INDIAN PROVIDERS
# ============================================================================

# Razorpay (Primary - Supports Domestic & International)
RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxx"
RAZORPAY_KEY_SECRET="your_razorpay_secret"
RAZORPAY_WEBHOOK_SECRET="your_razorpay_webhook_secret"

# PayU (Backup - Popular for Indian payments)
PAYU_MERCHANT_KEY="your_payu_merchant_key"
PAYU_MERCHANT_SALT="your_payu_merchant_salt"
PAYU_MODE="test" # test or production

# Paytm (Alternative provider)
PAYTM_MERCHANT_ID="your_paytm_merchant_id"
PAYTM_MERCHANT_KEY="your_paytm_merchant_key"
PAYTM_WEBSITE="WEBSTAGING" # WEBSTAGING for test, DEFAULT for production
PAYTM_INDUSTRY_TYPE="Retail"
PAYTM_CHANNEL_ID="WEB"

# CCAvenue (Enterprise option)
CCAVENUE_MERCHANT_ID="your_ccavenue_merchant_id"
CCAVENUE_ACCESS_CODE="your_ccavenue_access_code"
CCAVENUE_WORKING_KEY="your_ccavenue_working_key"

# Instamojo (For easy onboarding)
INSTAMOJO_API_KEY="your_instamojo_api_key"
INSTAMOJO_AUTH_TOKEN="your_instamojo_auth_token"
INSTAMOJO_MODE="test" # test or production

# ============================================================================
# INTERNATIONAL PAYMENTS (For NRI Investors)
# ============================================================================

# Stripe (International payments)
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxx"

# PayPal (Alternative for international)
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox" # sandbox or live

# ============================================================================
# PAYMENT CONFIGURATION
# ============================================================================
PAYMENT_CURRENCY="INR"
PAYMENT_CURRENCY_INTERNATIONAL="USD"
DEFAULT_PAYMENT_GATEWAY="razorpay" # razorpay, payu, stripe, paytm, ccavenue, instamojo
INTERNATIONAL_PAYMENT_GATEWAY="stripe" # stripe, paypal

# Payment limits (in INR)
MIN_INVESTMENT_AMOUNT=25000
MAX_INVESTMENT_AMOUNT=10000000

# ============================================================================
# SECURITY & ENCRYPTION
# ============================================================================

# Encryption key for sensitive data (Generate: openssl rand -hex 32)
ENCRYPTION_KEY="your-256-bit-encryption-key-change-in-production"
ENCRYPTION_ALGORITHM="aes-256-gcm"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:8080,http://localhost:3000"

# Session configuration
SESSION_SECRET="your-session-secret-change-in-production"
SESSION_TIMEOUT=3600000 # 1 hour in milliseconds

# ============================================================================
# REDIS & JOB QUEUES
# ============================================================================
REDIS_URL="redis://localhost:6379"

# ============================================================================
# ADMIN NOTIFICATIONS
# ============================================================================
ADMIN_EMAIL="admin@indiaangelforum.com"

# ============================================================================
# FILE STORAGE & CLEANUP
# ============================================================================
ARCHIVE_DIR="./archives"
INVOICE_RETENTION_YEARS=2        # Archive and delete invoices after 2 years
ARCHIVE_RETENTION_YEARS=7        # Delete archives after 7 years (regulatory minimum)
DISK_SPACE_ALERT_THRESHOLD_GB=10 # Email admin when disk space < 10GB

# ============================================================================
# COMPLIANCE & KYC
# ============================================================================

# KYC Provider (DigiLocker, Aadhaar eSign, etc.)
KYC_PROVIDER="digilocker" # digilocker, aadhaar, manual
DIGILOCKER_CLIENT_ID="your_digilocker_client_id"
DIGILOCKER_CLIENT_SECRET="your_digilocker_client_secret"

# AML Screening API
AML_SCREENING_API_KEY="your_aml_screening_api_key"
AML_SCREENING_ENABLED="true"

# ============================================================================
# NOTIFICATION SERVICES
# ============================================================================

# Email (SendGrid, AWS SES, etc.)
EMAIL_PROVIDER="sendgrid" # sendgrid, ses, smtp
SENDGRID_API_KEY="your_sendgrid_api_key"
EMAIL_FROM="noreply@indiaangelforum.com"

# SMS (Twilio, AWS SNS, etc.)
SMS_PROVIDER="twilio" # twilio, sns
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level
LOG_LEVEL="info" # debug, info, warn, error

# Sentry (Error tracking)
SENTRY_DSN="your_sentry_dsn"
SENTRY_ENVIRONMENT="development" # development, staging, production

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV="development" # development, staging, production
PORT=3001
FRONTEND_URL="http://localhost:8080"

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"
S3_BUCKET="your-backup-bucket"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="ap-south-1"
